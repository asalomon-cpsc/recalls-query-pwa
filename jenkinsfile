pipeline {
    agent any

    stages{
        stage('Build'){
            steps{
                echo 'Building..'
                bat 'npm install'
            }
        }
        stage('Deliver for development') {
            when {
                branch 'development'  
            }
            steps {
               echo 'packaging and deploying for development'
               bat 'npm run build'
               bat 'robocopy  dist \\\\rmspreprodweb2\\c$\\inetpub\\wwwroot\\recalls-pwa-api\\wwwroot /purge /e'
               
            }
        }
        stage('Deliver for production') {
            when {
                branch 'production'  
            }
            steps {
               echo 'packaging and deploying for production'
               bat 'npm run build'
               bat 'robocopy  dist  \\\\rmsprodweb1\\c$\\inetpub\\wwwroot\\recalls-pwa-api\\wwwroot /purge /e'
               bat 'robocopy  dist  \\\\rmsprodweb2\\c$\\inetpub\\wwwroot\\recalls-pwa-api\\wwwroot /purge /e'
            }
        }
      
    }
}