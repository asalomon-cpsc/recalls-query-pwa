pipeline {
    agent any

    stages{
        stage('Build'){
            steps{
                echo 'Building..'
                bat 'npm install'
            }
        }
        stage('Deliver for development') {
            when {
                branch 'development'  
            }
            steps {
               echo 'packaging and deploying for development'
               bat 'npm run build'
               bat 'deploy.cmd development'

            }
        }
        stage('Deliver for production') {
            when {
                branch 'production'  
            }
            steps {
               echo 'packaging and deploying for production'
               bat 'npm run build'
               bat 'deploy.cmd production'
               
            }
        }
      
    }
}